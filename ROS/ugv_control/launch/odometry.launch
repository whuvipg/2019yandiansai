<!-- -*- mode: XML -*- -->
<launch>

    <include file="$(find ugv_control)/launch/ugvdriver.launch">
	    <arg name="pub_base_odom_transform" value="true"/>
        <arg name="use_vo" default="false"/>
        <arg name="use_gps" default="false"/>  
        <arg name="vo_init_thresh" default="1.0"/>  
    </include>

    ################ start orb_slam node ################
    <include file="$(find ORB_SLAM2)/launch/orb_slam2.launch">
    </include>
    
    <include file="$(find ugv_control)/launch/path.launch">
        <arg name="fixed_frame" value="odom"/>
        <arg name="use_odom" value="true"/>
    </include>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ugv_control)/rviz/odometry.rviz" />

</launch>
